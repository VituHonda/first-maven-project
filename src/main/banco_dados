CREATE TABLE PRODUTOS(
    PRODUTO_ID INT NOT NULL PRIMARY KEY,
    NOME VARCHAR2(45),
    PRECO FLOAT,
    DESCRICAO VARCHAR2(45),
    DATA_CADASTRO DATE,
    CATEGORIA_ID INT
);

CREATE TABLE CATEGORIAS(
    CATEGORIA_ID INT NOT NULL PRIMARY KEY,
    NOME VARCHAR2(45)
);

CREATE TABLE ITENS_PEDIDOS(
    ITENS_PEDIDOS_ID INT NOT NULL PRIMARY KEY,
    QUANTIDADE INT,
    PRECO_UNIT FLOAT,
    PEDIDO_ID INT,
    PRODUTO_ID INT
);

CREATE TABLE CLIENTES(
    CLIENTE_ID INT NOT NULL PRIMARY KEY,
    NOME VARCHAR2(10),
    CPF VARCHAR2(10)
);

CREATE TABLE PEDIDOS(
    PEDIDO_ID INT NOT NULL PRIMARY KEY,
    DATA_PEDIDO DATE,
    TOTAL_VENDIDO FLOAT,
    CLIENTE_ID INT
);



ALTER TABLE PRODUTOS
ADD FOREIGN KEY (CATEGORIA_ID) REFERENCES CATEGORIAS(CATEGORIA_ID);

ALTER TABLE ITENS_PEDIDOS
ADD FOREIGN KEY (PEDIDO_ID) REFERENCES PEDIDOS(PEDIDO_ID);

ALTER TABLE ITENS_PEDIDOS
ADD FOREIGN KEY (PRODUTO_ID) REFERENCES PRODUTOS(PRODUTO_ID);

ALTER TABLE PEDIDOS
ADD FOREIGN KEY (CLIENTE_ID) REFERENCES CLIENTES(CLIENTE_ID);